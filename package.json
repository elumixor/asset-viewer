{
  "name": "@elumixor/asset-viewer",
  "version": "2.0.4",
  "description": "A simple asset viewer for PixiJS and Three.js",
  "main": "dist/server/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elumixor/asset-viewer.git"
  },
  "files": [
    "./dist"
  ],
  "bin": {
    "asset-viewer": "dist/server/index.js"
  },
  "scripts": {
    "build": "bun run build:clean && concurrently \"bun run build:client\" \"bun run build:server && bun run build:shebang\"",
    "build:clean": "rm -rf ./dist",
    "build:client": "vite build",
    "build:server": "bun build ./src/server/index.ts --target bun --outdir ./dist/server --minify",
    "build:shebang": "bun run ./scripts/add-shebang.ts",
    "dev": "concurrently \"bun run dev:server ./test/assets\" \"bun run dev:client\"",
    "dev:client": "vite",
    "dev:server": "bun run --hot ./src/server/index.ts",
    "check": "tsc --noEmit && bun run lint",
    "lint": "biome check . --fix",
    "format": "biome format . --write",
    "preview": "concurrently \"bun run ./dist/server/index.js ./test/assets\" \"vite preview\"",
    "release:patch": "npm version patch -m \"Release v%s\" && git push --tags",
    "release:minor": "npm version minor -m \"Release v%s\" && git push --tags",
    "release:major": "npm version major -m \"Release v%s\" && git push --tags"
  },
  "author": "elumixor",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@elumixor/thrixi-resources": "^1.0.6",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.2.21",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.180.0",
    "@vitejs/plugin-react": "^4.3.1",
    "commander": "^12.1.0",
    "concurrently": "^8.2.2",
    "hono": "^4.9.7",
    "pixi.js": "^8.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.13",
    "three": "^0.180.0",
    "typescript": "~5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
